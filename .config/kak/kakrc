#hook global ModuleLoaded x11 %{
#    set-option global termcmd "gnome-terminal -e"
#}

#--kak-lsp---------------------------------------------------------------------#
eval %sh{kak-lsp --kakoune -s $kak_session}
hook global WinSetOption filetype=(rust|c|cpp) %{
    lsp-enable-window
    set-option buffer indentwidth 2
}
